@using SistemaVentas.Web.ViewModels
@model List<ProductosViewModel>

@{
    ViewData["Title"] = "Listado de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-primary">Listado de Productos</h2>
        <a asp-controller="Productos" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Agregar Producto
        </a>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var p in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body">
                            <h5 class="card-title text-dark">@p.descripcion</h5>
                            <p class="card-text text-muted mb-4">Precio: $@p.precio</p>

                            <div class="d-flex justify-content-between">
                                <a asp-controller="Productos" asp-action="Edit" asp-route-id="@p.idProducto" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>

                                <a asp-controller="Productos" asp-action="Delete" asp-route-id="@p.idProducto" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Borrar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info" role="alert">
                No hay productos cargados actualmente.
            </div>
        }
    </div>
</div>
