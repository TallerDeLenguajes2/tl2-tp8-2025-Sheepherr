@using SistemaVentas.Web.ViewModels
@model List<PresupuestoViewModel>

@{
    ViewData["Title"] = "Listado de Presupuestos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-primary">Listado de Presupuestos</h2>
        <a asp-controller="Presupuestos" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Agregar Presupuesto
        </a>
    </div>
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-warning text-dark mt-3" role="alert">
            @TempData["Mensaje"]
        </div>
    }

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var p in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-dark">Destinatario: @p.NombreDestinatario</h5>
                                <p class="card-text text-muted mb-2">Fecha de creaci√≥n: @p.FechaCreacion</p>
                                <p class="card-text text-secondary">ID Presupuesto: @p.idPresupuesto</p>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    <a asp-controller="Presupuestos" asp-action="Edit" asp-route-id="@p.idPresupuesto" 
                                       class="btn btn-warning btn-sm me-2">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-controller="Presupuestos" asp-action="Delete" asp-route-id="@p.idPresupuesto" 
                                       class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>

                                <a asp-controller="Presupuestos" asp-action="Details" asp-route-id="@p.idPresupuesto" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info" role="alert">
                No hay presupuestos cargados actualmente.
            </div>
        }
    </div>
</div>
