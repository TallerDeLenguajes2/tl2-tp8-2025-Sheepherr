@using SistemaVentas.Web.ViewModels
@model PresupuestoViewModel

@{
    ViewData["Title"] = "Detalles del Presupuesto";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Detalles del Presupuesto</h2>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="card-title text-dark">Destinatario: @Model.NombreDestinatario</h5>
            <p class="card-text text-muted mb-2">Fecha de creación: @Model.FechaCreacion</p>
            <p class="card-text text-secondary">ID Presupuesto: @Model.idPresupuesto</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model.productosVM == null || !Model.productosVM.Any())
    {
        <div class="alert alert-warning" role="alert">
            El presupuesto elegido no tiene Productos cargados.
        </div>
    }
    else
    {
        <h4 class="text-secondary mb-3">Detalles</h4>
        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-light">
                <tr>
                    <th>Descripción</th>
                    <th style="width: 130px;">Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Precio Total</th>
                    <th style="width: 160px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.productosVM)
                {
                    <tr>
                        <td>@d.descripcion</td>

                        <td>
                            <form asp-action="ModificarDetalle" method="post" class="d-flex justify-content-center">
                                <input type="hidden" name="idPresupuesto" value="@Model.idPresupuesto" />
                                <input type="hidden" name="idProducto" value="@d.idProducto" />
                                <input type="number" class="form-control text-center" name="cantidad" min="1" style="width: 70px;" value="@d.cantidad" />
                                <button class="btn btn-sm btn-primary ms-2" type="submit">OK</button>
                            </form>
                        </td>

                        <td>@d.precio</td>
                        <td>@(d.cantidad * d.precio)</td>

                        <td>
                            <form asp-action="EliminarDetalle" method="post">
                                <input type="hidden" name="idPresupuesto" value="@Model.idPresupuesto" />
                                <input type="hidden" name="idProducto" value="@d.idProducto" />
                                <button class="btn btn-sm btn-danger" type="submit">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="nt-4 d-flex justify-content-between">
        <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
        <a asp-controller="Presupuestos"
            asp-action="AgregarProducto"
            asp-route-id="@Model.idPresupuesto"
            class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Agregar producto
        </a>
    </div>
</div>
