@model ClaseMVC.Models.Presupuestos

@{
    ViewData["Title"] = "Editar Presupuesto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Presupuesto</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Presupuestos" asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="@Model.IdPresupuesto" />

                <div class="mb-3">
                    <label asp-for="@Model.nombreDestinatario" class="form-label fw-bold">Nombre del Destinatario</label>
                    <input asp-for="@Model.nombreDestinatario" class="form-control" placeholder="Ingrese el nombre del destinatario" />
                    <span asp-validation-for="@Model.nombreDestinatario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.FechaCreacion" class="form-label fw-bold">Fecha de Creaci√≥n</label>
                    <input asp-for="FechaCreacion" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="@Model.FechaCreacion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left" ></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
