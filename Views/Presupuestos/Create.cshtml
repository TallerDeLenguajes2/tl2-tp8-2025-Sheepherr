@model ClaseMVC.Models.Presupuestos

@{
    ViewData["Title"] = "Crear Presupuesto";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Crear nuevo presupuesto</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="nombreDestinatario" class="form-label">Nombre destinatario</label>
                    <input asp-for="nombreDestinatario" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="FechaCreacion" class="form-label">Fecha de creaci√≥n</label>
                    <input asp-for="FechaCreacion" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-success">Crear presupuesto</button>
                </div>
            </form>
        </div>
    </div>
</div>
